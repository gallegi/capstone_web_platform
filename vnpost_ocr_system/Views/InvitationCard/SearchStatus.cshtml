@{
    ViewBag.Title = "SearchStatus";
    Layout = "~/Views/Shared/_MasterPage.cshtml";
}

<link href="~/CustomCSS/InvitationCard/Search.css" rel="stylesheet" />
<link href="~/CustomCSS/preloader/FontAwesome.css" rel="stylesheet" />

<div class="card p-5 search-card" style="margin-top: 0% !important; padding-top: 150px !important; width: 100% !important; height: 300px !important">
    <div class="input-group m-t-0 p-l-10 p-r-15">
        <h5 class="center">Tra cứu giấy hẹn</h5>
        <div class="row">
            <form action="/giay-hen/trang-thai-giay-hen" method="post">
                <input required name="id" id="input" type="text" class="form-control col offset-l4 offset-s1 l4 s8 my-form" style="border: 2px solid #e9ecef;"
                       placeholder="Nhập mã giấy hẹn để kiểm tra tình trạng" >
                <button class="align-self-stretch btn btn-secondary input-group-append my-btn col" id="search-button" type="submit">
                    <a class="col l2 s1"> <i class="fa fa-search" style="color: white;"></i></a>
                </button>
            </form>
        </div>
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        var mess = '@ViewBag.mess';
        if (mess != "") {
            if (mess == "2") {
                errorAlert("Lỗi", "Mã đơn hàng không tồn tại");
            } else {
                errorAlert("Lỗi", mess);
            }
        }
    });

</script>