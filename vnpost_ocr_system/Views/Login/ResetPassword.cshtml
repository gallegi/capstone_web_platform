    function changepass() {
        var newpass = document.getElementById('newpass').value;
        var repass = document.getElementById('repass').value;
        if (newpass.length == 0 || newpass.length < 6) {
            errorAlert('Lỗi', 'Mật khẩu phải gồm 6 kí tự');
            return false;
        }
        if (repass.length == 0 || repass.length < 6) {
            errorAlert('Lỗi', 'Mật khẩu nhập lại phải gồm 6 kí tự');
            return false;
        }
        if (newpass != repass) {
            errorAlert('Lỗi', 'Mật khẩu nhập lại không chính xác');
            return false;
        }
        var emp = {
            password: newpass,
            userid: document.getElementById('userid').value,
        };
        $('#pre-load').show();
        $.ajax({
            url: "/LoginCustomer/ChangePass",
            type: "POST",
            data: JSON.stringify(emp),
            contentType: "application/json;charset=utf-8",
            success: function (result) {
                if (result == 1) {
                    successAlert('Thành công', 'Đổi mật khẩu thành công');
                    setTimeout(function () {
                        window.location.href = "/khach-hang/dang-nhap";
                    }, 1200);
                }
                if (result == 0) {
                    errorAlert('Lỗi', 'Có lỗi xảy ra. Vui lòng thử lại');
                }
                $('#pre-load').hide();
            },
            error: function (errormessage) {
                $('#pre-load').hide();
            }
        });
    }
</script>
